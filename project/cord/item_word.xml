<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/japaneseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="学校"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/koreanText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="학교"
                android:textSize="16sp"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/hiraganaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="がっこう"
                android:textSize="14sp"
                android:textColor="#93C5FD"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/studyCountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="학습 횟수: 0"
                android:textSize="12sp"
                android:textColor="#93C5FD"
                android:background="@drawable/rounded_background_light"
                android:padding="6dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="#F87171"
            app:tint="#FFFFFF"
            android:contentDescription="삭제" />

    </LinearLayout>

</androidx.cardview.widget.CardView>